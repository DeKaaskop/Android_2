<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/li_image"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_marginRight="6dip"
        android:contentDescription="@string/imageview_contentdescription" />

    <TextView
        android:id="@+id/li_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/li_image"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/li_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/li_title"
        android:layout_gravity="center"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@id/li_image"
        android:gravity="right"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>